<Window x:Class="CampaignMaster.Windows.wndSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampaignMaster"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="315"
        Width="560" ShowInTaskbar="False">
    <Grid>
        <Image Source="/CampaignMaster;component/Resources/Images/Misc/splash.png" Stretch="Fill" />
        <ProgressBar VerticalAlignment="Bottom" IsIndeterminate="True" Foreground="Black" Background="White" BorderBrush="{x:Null}" />
    </Grid>
</Window>
