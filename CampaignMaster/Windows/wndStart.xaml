                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/OpenCampaign_Frame.png"/>
                </Grid.Background>
                <sam.Controls:SamButton Content="Open" Foreground="#FF3F0900" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="34" Margin="21,11,21,28" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandOpenCampaign}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            </Grid>
