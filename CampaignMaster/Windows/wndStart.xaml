            <sam.Controls:SamButton Content="New Campaign" Foreground="#FF3F0900" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="34" Margin="25,14,26,14" Click="NewCampaign_Click" Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
        </Grid>
