<UserControl x:Class="CampaignMaster.Controls.NameGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignMaster.Controls"
             xmlns:samctl="clr-namespace:SamCorp.WPF.Controls;assembly=SamCorp.WPF"
             mc:Ignorable="d" 
             Height="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="5,0,0,0" >
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Icons/male.png"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" BorderThickness="0" Background="Transparent" Opacity="0.6" BorderBrush="Transparent" Tag="male" Click="GenerateNameButtonClick"/>
        </Grid>
        <Grid Grid.Column="1" Margin="5,0,0,0" >
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Icons/female.png"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" BorderThickness="0" Background="Transparent" Opacity="0.6" BorderBrush="Transparent" Tag="female" Click="GenerateNameButtonClick"/>
        </Grid>
        <Grid Grid.Column="2" Margin="10,0,5,0" >
            <Border CornerRadius="0,0,15,15" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Backgrounds/NameGeneratorBackground.jpg"/>
                </Border.Background>
            </Border>
            <!--<Border CornerRadius="5" BorderBrush="Transparent" BorderThickness="5" Background="White" Opacity="0.1"/>-->
            <TextBlock x:Name="txtName" Margin="40,0" VerticalAlignment="Center" FontSize="70" FontFamily="Bradley Hand ITC" FontWeight="Bold" Foreground="#F222"/>
            <Button Margin="5" Background="Transparent" Opacity="0.6" BorderBrush="Transparent" Click="FullRandomButtonClick"/>
        </Grid>
        <Grid Grid.Column="3" Margin="5,0,0,0" >
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Icons/elf.png"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" BorderThickness="0" Background="Transparent" Opacity="0.6" BorderBrush="Transparent" Tag="elf" Click="GenerateNameButtonClick"/>
        </Grid>
        <Grid Grid.Column="4" Margin="5,0,0,0" >
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Icons/orc.png"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" BorderThickness="0" Background="Transparent" Opacity="0.6" BorderBrush="Transparent" Tag="orc" Click="GenerateNameButtonClick"/>
        </Grid>
        <Grid Grid.Column="5" Margin="5,0,0,0" >
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Icons/warforged.png"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" BorderThickness="0" Background="Transparent" Opacity="0.6" BorderBrush="Transparent" Tag="warforged" Click="GenerateNameButtonClick"/>
        </Grid>
        <Grid Grid.Column="6" Margin="5,0,0,0" >
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Icons/gnome.png"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" BorderThickness="0" Background="Transparent" Opacity="0.6" BorderBrush="Transparent" Tag="gnome" Click="GenerateNameButtonClick"/>
        </Grid>
        <Grid Grid.Column="7" Margin="5,0,0,0" >
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Icons/halfling.png"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" BorderThickness="0" Background="Transparent" Opacity="0.6" BorderBrush="Transparent" Tag="halfling" Click="GenerateNameButtonClick"/>
        </Grid>

        <Border Grid.Column="0" Grid.ColumnSpan="8" Margin="5,0,0,0" Background="Black" Opacity="0.6" Height="22" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
