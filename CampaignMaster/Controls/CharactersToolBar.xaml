<UserControl x:Class="CampaignMaster.Controls.CharactersToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignMaster.Controls"
             xmlns:vm="clr-namespace:CampaignMaster.ViewModels"
             xmlns:samctl="clr-namespace:SamCorp.WPF.Controls;assembly=SamCorp.WPF"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:vmCharacterToolBar/>
    </UserControl.DataContext>
    <Grid>
        <ItemsControl Height="150" ItemsSource="{Binding Characters}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="150" Margin="0,0,5,0">
                        <Border x:Name="brdMask" CornerRadius="0,0,100,100" BorderBrush="{Binding Color}" BorderThickness="5,0,5,5">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding CharacterImage}"/>
                            </Border.Background>
                        </Border>
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="50" CornerRadius="100" Background="Black" Opacity="0.7"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Consolas" FontSize="40" Text="{Binding XpSessionCount}" Foreground="WhiteSmoke"/>
                        <samctl:SamButton VerticalAlignment="Top" Height="70" Opacity="0.6" Background="Transparent" HoverBackground="DodgerBlue" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandRaiseXp}"/>
                        <samctl:SamButton VerticalAlignment="Bottom" Height="80" Opacity="0.6" CornerRadius="0,0,100,100" Background="Transparent" HoverBackground="Navy" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandRaiseXpDouble}"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
