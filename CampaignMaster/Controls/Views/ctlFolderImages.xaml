<views:ctlViewBase x:Class="CampaignMaster.Controls.Views.ctlFolderImages"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:CampaignMaster"
                   xmlns:misc="clr-namespace:CampaignMaster.Misc"
                   xmlns:models="clr-namespace:CampaignMaster.ViewModels"
                   xmlns:views="clr-namespace:CampaignMaster.Controls.Views"
                   Background="{StaticResource View.Background}"
                   Caption="Background Images"
                   Direction="Up"
                   mc:Ignorable="d" 
                   d:DesignHeight="1600" d:DesignWidth="2400">
    <views:ctlViewBase.DataContext>
        <models:vmFolderImages/>
    </views:ctlViewBase.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Backgrounds/BoardBlank.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.ColumnSpan="2" IsHitTestVisible="False" Source="/CampaignMaster;component/Resources/Images/Backgrounds/MapsBackground.png" Stretch="Fill" Margin="30"/>


        <ListView Grid.Column="0" Background="{x:Null}" ItemsSource="{Binding Images}" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0" Margin="235,70,5,80">
            <ListView.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListView.LayoutTransform>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gainsboro" BorderThickness="2" Background="Gray" CornerRadius="5" Margin="10,10,0,0">
                        <Grid Width="205" Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>

                            <Viewbox Grid.Column="0" Grid.ColumnSpan="3">
                                <Viewbox.LayoutTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-20"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Viewbox.LayoutTransform>
                                <!--<TextBlock  Text="Clear Image" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>-->
                            </Viewbox>

                            <Image Grid.ColumnSpan="3" Source="{Binding}" Stretch="Uniform" Margin="0,0,0,5"/>

                            <Button Grid.Row="1" Grid.Column="0" Background="#FFE0BC9D" CommandParameter="{Binding}" Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.SelectImage}" Click="Button_Click">
                                <Image Source="/CampaignMaster;component/Resources/Images/Icons/select_map.png"/>
                            </Button>
                            <Button Grid.Row="1" Grid.Column="1" Background="#FF96D9FF" CommandParameter="{Binding}" Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.SelectTell}" Click="Button_Click">
                                <Image Source="/CampaignMaster;component/Resources/Images/Icons/select_image.png"/>
                            </Button>
                            <Button Grid.Row="1" Grid.Column="2" Background="White" CommandParameter="{Binding}" Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.SelectScratch}" Click="Button_Click">
                                <Image Source="/CampaignMaster;component/Resources/Images/Icons/select_map_scratch.png"/>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <ListView Grid.Column="1" Background="{x:Null}" ItemsSource="{Binding Maps}" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0" Margin="0,70,250,80">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gainsboro" BorderThickness="2" Background="Gray" CornerRadius="5" Margin="10,10,0,0">
                        <Grid Width="205" Height="190" Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Background="Transparent" BorderThickness="0" Click="LoadMap_Click" Tag="{Binding}">
                                <Image Source="{Binding PreviewImage}" Stretch="Uniform" Margin="5"/>
                            </Button>
                            <Viewbox Grid.Row="1">
                                <TextBlock Text="{Binding DateTimeInfo}" Foreground="White" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

    </Grid>
</views:ctlViewBase>
