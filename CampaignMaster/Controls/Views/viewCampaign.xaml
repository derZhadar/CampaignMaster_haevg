<views:ctlViewBase x:Class="CampaignMaster.Controls.Views.viewCampaign"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:CampaignMaster"
                   xmlns:misc="clr-namespace:CampaignMaster.Misc"
                   xmlns:models="clr-namespace:CampaignMaster.ViewModels"
                   xmlns:views="clr-namespace:CampaignMaster.Controls.Views"
                   xmlns:ctl="clr-namespace:CampaignMaster.Controls"
                   xmlns:samctl="clr-namespace:SamCorp.WPF.Controls;assembly=SamCorp.WPF"
                   xmlns:samconv="clr-namespace:SamCorp.WPF.Converter;assembly=SamCorp.WPF"
                   Background="{StaticResource View.Background}"
                   Caption="Background Images"
                   mc:Ignorable="d" 
                   d:DesignHeight="1600" d:DesignWidth="2400">
    <views:ctlViewBase.DataContext>
        <models:vmCampaignEditor/>
    </views:ctlViewBase.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Backgrounds/NewDrawingBoard_3.jpg"/>
        </Grid.Background>
        <Grid Margin="180,90,170,140">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="800"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" Text="{Binding Campaign.Name}" Foreground="#FF301D17" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="100" Background="Transparent" BorderThickness="0,0,0,6" BorderBrush="#FF301D17"/>

            <Grid Grid.Row="2" Grid.Column="0" Margin="0,20,50,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderThickness="0,0,0,6" VerticalAlignment="Bottom" BorderBrush="#FF301D17"/>
                <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Characters" Foreground="#FF301D17" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="80" Background="Transparent"/>

                <samctl:SamButton Grid.Row="2" Margin="8,2" Opacity="0.4" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandAddNewCharacter}">
                    <Grid>
                        <Image Stretch="Fill" Source="/CampaignMaster;component/Resources/Images/Misc/new_character_frame.png"/>
                        <TextBlock Text="New Character" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF945501" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="80"/>
                    </Grid>
                </samctl:SamButton>
                <samctl:SamButton Grid.Row="3" Margin="8,2" Opacity="0.4" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandAddNewCharacter}">
                    <Grid>
                        <Image Stretch="Fill" Source="/CampaignMaster;component/Resources/Images/Misc/new_character_frame.png"/>
                        <TextBlock Text="New Character" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF945501" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="80"/>
                    </Grid>
                </samctl:SamButton>
                <samctl:SamButton Grid.Row="4" Margin="8,2" Opacity="0.4" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandAddNewCharacter}">
                    <Grid>
                        <Image Stretch="Fill" Source="/CampaignMaster;component/Resources/Images/Misc/new_character_frame.png"/>
                        <TextBlock Text="New Character" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF945501" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="80"/>
                    </Grid>
                </samctl:SamButton>
                <samctl:SamButton Grid.Row="5" Margin="8,2" Opacity="0.4" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandAddNewCharacter}">
                    <Grid>
                        <Image Stretch="Fill" Source="/CampaignMaster;component/Resources/Images/Misc/new_character_frame.png"/>
                        <TextBlock Text="New Character" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF945501" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="80"/>
                    </Grid>
                </samctl:SamButton>
                <samctl:SamButton Grid.Row="6" Margin="8,2" Opacity="0.4" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandAddNewCharacter}">
                    <Grid>
                        <Image Stretch="Fill" Source="/CampaignMaster;component/Resources/Images/Misc/new_character_frame.png"/>
                        <TextBlock Text="New Character" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF945501" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="80"/>
                    </Grid>
                </samctl:SamButton>

                <Grid Grid.Row="2" Visibility="{Binding Campaign.Characters.Count, Converter={samconv:LargerOrEqualToVisibilityConverter}, ConverterParameter=1}">
                    <Grid.Background>
                        <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/CharFrame.png"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="{Binding  Campaign.Characters[0].CharacterImage}" Stretch="UniformToFill" Margin="25,15, 13,0"/>
                        <samctl:SamButton Grid.Row="1" Margin="25,3, 13,15" Background="{Binding Campaign.Characters[0].Color}" BorderThickness="0" Command="{Binding Campaign.Characters[0].CommandSelectColor}"/>
                    </Grid>

                    <Grid Grid.Column="1" Margin="14,21,40, 21">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Campaign.Characters[0].Name}" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="50"/>
                        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="20">
                            <Run Text="("/><Run Text="{Binding Campaign.Characters[0].PlayerName}"/><Run Text=")"/>
                        </TextBlock>
                        <TextBlock Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[0].Race}"/>, <Run Text="Level"/> <Run Text="{Binding Campaign.Characters[0].Level}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[0].Class}"/>
                        </TextBlock>
                    </Grid>
                    <samctl:SamButton Grid.Column="1" Margin="8,13,23,14" Opacity="0.4" Background="Transparent" HoverBackground="Red" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandDeleteCharacter}" CommandParameter="{Binding Campaign.Characters[0]}"/>
                </Grid>
                <Grid Grid.Row="3" Visibility="{Binding Campaign.Characters.Count, Converter={samconv:LargerOrEqualToVisibilityConverter}, ConverterParameter=2}">
                    <Grid.Background>
                        <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/CharFrame.png"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="{Binding  Campaign.Characters[1].CharacterImage}" Stretch="UniformToFill" Margin="25,15, 13,0"/>
                        <samctl:SamButton Grid.Row="1" Margin="25,3, 13,15" Background="{Binding Campaign.Characters[1].Color}" BorderThickness="0" Command="{Binding Campaign.Characters[1].CommandSelectColor}"/>
                    </Grid>

                    <Grid Grid.Column="1" Margin="14,21,40, 21">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Campaign.Characters[1].Name}" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="50"/>
                        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="20">
                            <Run Text="("/><Run Text="{Binding Campaign.Characters[1].PlayerName}"/><Run Text=")"/>
                        </TextBlock>
                        <TextBlock Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[1].Race}"/>, <Run Text="Level"/> <Run Text="{Binding Campaign.Characters[1].Level}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[1].Class}"/>
                        </TextBlock>
                    </Grid>
                    <samctl:SamButton Grid.Column="1" Margin="8,13,23,14" Opacity="0.4" Background="Transparent" HoverBackground="Red" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandDeleteCharacter}" CommandParameter="{Binding Campaign.Characters[1]}"/>
                </Grid>
                <Grid Grid.Row="4" Visibility="{Binding Campaign.Characters.Count, Converter={samconv:LargerOrEqualToVisibilityConverter}, ConverterParameter=3}">
                    <Grid.Background>
                        <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/CharFrame.png"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="{Binding  Campaign.Characters[2].CharacterImage}" Stretch="UniformToFill" Margin="25,15, 13,0"/>
                        <samctl:SamButton Grid.Row="1" Margin="25,3, 13,15" Background="{Binding Campaign.Characters[2].Color}" BorderThickness="0" Command="{Binding Campaign.Characters[2].CommandSelectColor}"/>
                    </Grid>

                    <Grid Grid.Column="1" Margin="14,21,40, 21">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Campaign.Characters[2].Name}" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="50"/>
                        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="20">
                            <Run Text="("/><Run Text="{Binding Campaign.Characters[2].PlayerName}"/><Run Text=")"/>
                        </TextBlock>
                        <TextBlock Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[2].Race}"/>, <Run Text="Level"/> <Run Text="{Binding Campaign.Characters[2].Level}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[2].Class}"/>
                        </TextBlock>
                    </Grid>
                    <samctl:SamButton Grid.Column="1" Margin="8,13,23,14" Opacity="0.4" Background="Transparent" HoverBackground="Red" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandDeleteCharacter}" CommandParameter="{Binding Campaign.Characters[2]}"/>
                </Grid>
                <Grid Grid.Row="5" Visibility="{Binding Campaign.Characters.Count, Converter={samconv:LargerOrEqualToVisibilityConverter}, ConverterParameter=4}">
                    <Grid.Background>
                        <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/CharFrame.png"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="{Binding  Campaign.Characters[3].CharacterImage}" Stretch="UniformToFill" Margin="25,15, 13,0"/>
                        <samctl:SamButton Grid.Row="1" Margin="25,3, 13,15" Background="{Binding Campaign.Characters[3].Color}" BorderThickness="0" Command="{Binding Campaign.Characters[3].CommandSelectColor}"/>
                    </Grid>

                    <Grid Grid.Column="1" Margin="14,21,40, 21">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Campaign.Characters[3].Name}" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="50"/>
                        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="20">
                            <Run Text="("/><Run Text="{Binding Campaign.Characters[3].PlayerName}"/><Run Text=")"/>
                        </TextBlock>
                        <TextBlock Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[3].Race}"/>, <Run Text="Level"/> <Run Text="{Binding Campaign.Characters[3].Level}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[3].Class}"/>
                        </TextBlock>
                    </Grid>
                    <samctl:SamButton Grid.Column="1" Margin="8,13,23,14" Opacity="0.4" Background="Transparent" HoverBackground="Red" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandDeleteCharacter}" CommandParameter="{Binding Campaign.Characters[3]}"/>
                </Grid>
                <Grid Grid.Row="6" Visibility="{Binding Campaign.Characters.Count, Converter={samconv:LargerOrEqualToVisibilityConverter}, ConverterParameter=5}">
                    <Grid.Background>
                        <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/CharFrame.png"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="{Binding  Campaign.Characters[4].CharacterImage}" Stretch="UniformToFill" Margin="25,15, 13,0"/>
                        <samctl:SamButton Grid.Row="1" Margin="25,3, 13,15" Background="{Binding Campaign.Characters[4].Color}" BorderThickness="0" Command="{Binding Campaign.Characters[4].CommandSelectColor}"/>
                    </Grid>

                    <Grid Grid.Column="1" Margin="14,21,40, 21">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Campaign.Characters[4].Name}" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="50"/>
                        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Foreground="#FF3E261E" FontFamily="Bradley Hand ITC" FontWeight="Bold" FontSize="20">
                            <Run Text="("/><Run Text="{Binding Campaign.Characters[4].PlayerName}"/><Run Text=")"/>
                        </TextBlock>
                        <TextBlock Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[4].Race}"/>, <Run Text="Level"/> <Run Text="{Binding Campaign.Characters[4].Level}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3E261E" FontFamily="Consolas" FontSize="30">
                            <Run Text="{Binding Campaign.Characters[4].Class}"/>
                        </TextBlock>
                    </Grid>
                    <samctl:SamButton Grid.Column="1" Margin="8,13,23,14" Opacity="0.4" Background="Transparent" HoverBackground="Red" BorderBrush="Transparent" BorderThickness="0" Command="{Binding CommandDeleteCharacter}" CommandParameter="{Binding Campaign.Characters[4]}"/>
                </Grid>

            </Grid>

            <ctl:ctlCalendar Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,20,0,4"/>
        </Grid>
    </Grid>
</views:ctlViewBase>
