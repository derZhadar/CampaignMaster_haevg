<views:ctlViewBase x:Class="CampaignMaster.Controls.Views.viewMaps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:CampaignMaster"
                   xmlns:misc="clr-namespace:CampaignMaster.Misc"
                   xmlns:vm="clr-namespace:CampaignMaster.ViewModels"
                   xmlns:views="clr-namespace:CampaignMaster.Controls.Views"
                   Background="{StaticResource View.Background}"
                   Caption="Maps"
                   Direction="Left"
                   mc:Ignorable="d" 
                   d:DesignHeight="1600" d:DesignWidth="2400">
    <views:ctlViewBase.DataContext>
        <vm:vmMapBrowser/>
    </views:ctlViewBase.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Backgrounds/NewDrawingBoard.jpg"/>
        </Grid.Background>
        <Image IsHitTestVisible="False" Source="/CampaignMaster;component/Resources/Images/Backgrounds/MapsBackground.png" Stretch="Fill" Margin="30"/>

        <ListView Background="{x:Null}" ItemsSource="{Binding Maps}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0" Margin="235,70,250,80">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gainsboro" BorderThickness="2" Background="Gray" CornerRadius="5" Margin="10,10,0,0">
                        <Grid Width="285" Height="240" Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            
                            <Button Grid.Row="0" Background="Transparent" BorderThickness="0" Click="LoadMap_Click" Tag="{Binding}">
                                <Image Source="{Binding PreviewImage}" Stretch="Uniform" Margin="5"/>
                            </Button>
                            <Viewbox Grid.Row="1">
                                <TextBlock Text="{Binding DateTimeInfo}" Foreground="White" HorizontalAlignment="Center"/>
                            </Viewbox>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
    </views:ctlViewBase>