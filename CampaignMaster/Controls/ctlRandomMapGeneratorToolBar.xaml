<UserControl x:Class="CampaignMaster.Controls.ctlRandomMapGeneratorToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignMaster.Controls"
             xmlns:samctl="clr-namespace:SamCorp.WPF.Controls;assembly=SamCorp.WPF"
             mc:Ignorable="d">
    <Grid Height="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="5,0,0,0">
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/card_dungeon.jpg"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" Opacity="0.6" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Tag="https://watabou.github.io/one-page-dungeon" Click="RandomMapClick"/>
        </Grid>

        <Grid Grid.Column="1" Margin="5,0,0,0">
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/card_dwelling.jpg"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" Opacity="0.6" Background="Transparent" BorderBrush="Transparent" Tag="https://watabou.github.io/dwellings" Click="RandomMapClick"/>
        </Grid>

        <Grid Grid.Column="2" Margin="5,0,0,0">
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/card_cave.jpg"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" Opacity="0.6" Background="Transparent" BorderBrush="Transparent" Tag="https://watabou.github.io/cave-generator" Click="RandomMapClick"/>
        </Grid>

        <Grid Grid.Column="3" Margin="5,0,0,0">
            <Border CornerRadius="0,0,50,50" BorderBrush="PapayaWhip" BorderThickness="5,0,5,5">
                <Border.Background>
                    <ImageBrush ImageSource="/CampaignMaster;component/Resources/Images/Misc/card_village.jpg"/>
                </Border.Background>
            </Border>
            <samctl:SamButton CornerRadius="0,0,50,50" Opacity="0.6" Background="Transparent" BorderBrush="Transparent" Tag="https://watabou.github.io/village-generator" Click="RandomMapClick"/>
        </Grid>

        <Border Grid.Column="0" Grid.ColumnSpan="4" Margin="5,0,0,0" Background="Black" Opacity="0.6" Height="22" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
