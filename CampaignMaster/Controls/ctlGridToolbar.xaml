<UserControl x:Class="CampaignMaster.Controls.ctlGridToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:CampaignMaster.ViewModels"
             xmlns:controls="clr-namespace:CampaignMaster.Controls"
             xmlns:sam.control="clr-namespace:SamCorp.WPF.Controls;assembly=SamCorp.WPF"
             xmlns:misc="clr-namespace:CampaignMaster.Misc"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             Height="70" d:DesignWidth="800">
    <UserControl.RenderTransform>
        <TranslateTransform/>
    </UserControl.RenderTransform>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.ColumnSpan="3" Background="{StaticResource Toolbar.Background}" CornerRadius="0,0,30,0"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" FontSize="20" Foreground="White" Content="{Binding ElementName=sldOpacity, Path=Value, Converter={misc:OpacityToPercentValueConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <controls:ctlImageSlider x:Name="sldOpacity" Grid.Column="1" VerticalAlignment="Center" Maximum="1" Minimum="0" TickFrequency="0.1" SmallChange="0.1" LargeChange="0.1" Style="{DynamicResource SimpleImageSlider}" Margin="10,5" IsSnapToTickEnabled="True" TickPlacement="Both" Image="/CampaignMaster;component/Resources/Images/Icons/icon_opacity.png" Value="{Binding Path=(models:vmDrawingBoard.GridOpacity), Mode=TwoWay}"/>
            </Grid>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Click="Button_Click" Margin="5,0" Width="50" Height="50" BorderBrush="LightGray" Background="Black" BorderThickness="3" Style="{StaticResource RoundButton}"/>
                <Button Click="Button_Click" Margin="5,0" Width="50" Height="50" BorderBrush="LightGray" Background="Gray" BorderThickness="3" Style="{StaticResource RoundButton}"/>
                <Button Click="Button_Click" Margin="5,0" Width="50" Height="50" BorderBrush="DarkGray" Background="LightGray" BorderThickness="3" Style="{StaticResource RoundButton}"/>
                <Button Click="Button_Click" Margin="5,0" Width="50" Height="50" BorderBrush="DarkGray" Background="White" BorderThickness="3" Style="{StaticResource RoundButton}"/>
            </StackPanel>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="1" FontSize="20" Foreground="White" Content="{Binding ElementName=sldGrdSize, Path=Value}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <controls:ctlImageSlider x:Name="sldGrdSize" Grid.Column="0" VerticalAlignment="Center" Minimum="2" Maximum="20" TickFrequency="1" SmallChange="1" Style="{DynamicResource SimpleImageSlider}" Margin="10,5" IsSnapToTickEnabled="True" TickPlacement="Both" Image="/CampaignMaster;component/Resources/Images/Icons/icon_grid_size.png" Value="{Binding Path=(models:vmDrawingBoard.GridSize), Mode=TwoWay, Converter={misc:GridRectToDoubleValueConverter}}"/>
            </Grid>
        </Grid>

        <Border HorizontalAlignment="Left" Width="70" Height="70" Margin="0,0,0,-140"  Background="{StaticResource Toolbar.Background}" CornerRadius="0,0,0,30">
            <sam.control:SamButton Margin="5" CornerRadius="100" BorderThickness="3"  FontFamily="Segoe UI Symbol" Content="&#xE138;" FontSize="36" Click="ShowToolbarButtonClick"/>
        </Border>


    </Grid>
</UserControl>
