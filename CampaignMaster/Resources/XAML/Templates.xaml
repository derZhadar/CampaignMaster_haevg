<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CampaignMaster.Controls.Views">
    <ControlTemplate x:Key="View.Template" TargetType="views:ctlViewBase">
        <Grid Name="grdTemplate">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.RowSpan="2" Background="Gray" BorderThickness="0,0,0,3" BorderBrush="White"/>
            <Viewbox HorizontalAlignment="Left" Margin="10">
                <TextBlock Text="{TemplateBinding Caption}" Foreground="White"/>
            </Viewbox>

            <InkCanvas x:Name="PART_InkCanvas" Grid.Row="2" Background="{StaticResource View.Background}" EditingMode="GestureOnly">
                <InkCanvas.DefaultDrawingAttributes>
                    <DrawingAttributes Color="Transparent" FitToCurve="False" Height="2.0031496062992127" IgnorePressure="False" IsHighlighter="False" StylusTip="Ellipse" StylusTipTransform="Identity" Width="2.0031496062992127"/>
                </InkCanvas.DefaultDrawingAttributes>
            </InkCanvas>

            <Grid Grid.Row="1" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="90*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1" CornerRadius="35" Margin="0,0,-5,5" Background="#21000000" />

                <Border x:Name="MaskBorder" Grid.Column="1" Background="White" CornerRadius="35" Margin="0,0,0,10" Opacity="1"/>
                <ContentPresenter Grid.Column="1" Margin="0,0,0,10">
                    <ContentPresenter.OpacityMask>
                        <VisualBrush Visual="{Binding ElementName=MaskBorder}"/>
                    </ContentPresenter.OpacityMask>
                </ContentPresenter>
            </Grid>

            <!--<Grid.RowDefinitions>
                <RowDefinition Height="100"/>
