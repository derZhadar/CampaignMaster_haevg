            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource Toolbar.Background}">
                <Label Content="{TemplateBinding Caption}" Foreground="White" FontSize="50" VerticalContentAlignment="Center" Margin="10,0"/>
            </Border>
            <Border Grid.Row="1" Background="{StaticResource View.Background}">
                <Border>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#7B000000" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="0.087"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <ContentPresenter/>
                </Border>
            </Border>-->
        </Grid>
    </ControlTemplate>
</ResourceDictionary>